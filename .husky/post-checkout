#!/usr/bin/env sh

echo ""
echo "üîÑ post-checkout: Menjalankan npm install untuk memastikan dependency up-to-date..."

ERROR_MSG=$(npm install 2>&1)
EXIT_CODE=$?

if [ $EXIT_CODE -ne 0 ]; then
  echo ""
  echo "‚ùå Gagal install dependencies setelah checkout!"
  echo ""
  echo "Detail error:"
  echo "$ERROR_MSG"
  echo ""
  exit 1
fi
echo ""
echo "‚úÖ Dependencies berhasil diinstall setelah checkout."
echo ""
