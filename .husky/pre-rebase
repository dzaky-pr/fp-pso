#!/usr/bin/env sh

echo ""
echo "üîß pre-rebase: Akan melakukan rebase. Pastikan workspace bersih."
# Misal: simpan backup
BRANCH_NAME="backup-before-rebase-$(date +%s)"
git branch "$BRANCH_NAME"
EXIT_CODE=$?
if [ $EXIT_CODE -ne 0 ]; then
  echo "‚ùå [ERROR] Gagal membuat branch backup: $BRANCH_NAME"
  exit 1
fi

echo "Branch backup dibuat: $BRANCH_NAME"
echo ""
