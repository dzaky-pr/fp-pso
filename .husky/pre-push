#!/usr/bin/env sh

echo ""
echo "üöÄ pre-push: Menjalankan test sebelum push ke remote..."

ERROR_MSG=$(npm test 2>&1)
EXIT_CODE=$?

if [ $EXIT_CODE -ne 0 ]; then
  echo ""
  echo "‚ùå Push dibatalkan karena test gagal!"
  echo ""
  echo "Detail error:"
  echo "$ERROR_MSG"
  echo ""
  exit 1
fi
echo ""
echo "‚úÖ Semua test lulus. Push akan dilanjutkan."
echo ""
